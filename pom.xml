<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.imagingbook</groupId>
  <artifactId>imagingbook</artifactId>
  <!-- https://issues.apache.org/jira/browse/MNG-624 -->
  <version>FIXED</version> <!-- <version>0.0.1-SNAPSHOT</version> -->
  
  <properties>
  	<!-- https://stackoverflow.com/questions/8026783/can-you-inherit-the-version-from-the-parent-pom-in-maven/13946375#13946375 -->
  	<imagingbook.version>1.0-SNAPSHOT</imagingbook.version>
  	<imagingbook-common.version>1.0-SNAPSHOT</imagingbook-common.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
  <packaging>pom</packaging>
  <name>ImagingBook</name>
  <description>Java source code for image processing books by Burger and Burge</description>
  <modules>
  	<module>imagingbook-common</module>
  	<module>imagingbook-plugins-all</module>
  	<module>imagingbook-plugins-de2</module>
  	<module>imagingbook-plugins-de3</module>
  	<module>imagingbook-plugins-en1</module>
  	<module>imagingbook-plugins-en2</module>
  	<module>imagingbook-plugins-en3</module>
  </modules>
  <repositories>
  	<repository>
    	<id>imagej.public</id>
    	<url>http://maven.imagej.net/content/groups/public</url>
 	 </repository>
	</repositories>
	  <dependencies>
  	<dependency>
  		<groupId>net.imagej</groupId>
  		<artifactId>ij</artifactId>
  		<version>1.50e</version>
  	</dependency>
  	<!-- <dependency> -->
  		<!-- from http://stackoverflow.com/questions/3356716/com-suntoolsjar1-4-2-missing-when-running-perform-eclipse-in-roo -->
  		<!-- <groupId>com.sun</groupId> -->
  		<!-- <artifactId>tools</artifactId> -->
  		<!-- <version>1.4.2</version> -->
  		<!-- <scope>system</scope> -->
        <!-- <systemPath>C:/Program Files/Java/jdk1.8.0_65/lib/tools.jar</systemPath> -->
  	<!-- </dependency> -->
	  </dependencies>
  <build>
	  <pluginManagement>
	     <plugins>
	        <plugin>
	           <groupId>org.apache.maven.plugins</groupId>
	           <artifactId>maven-compiler-plugin</artifactId>
	           <version>3.3</version>
	           <configuration>
	              <source>1.8</source>
	              <target>1.8</target>
	           </configuration>
	        </plugin>
	     </plugins>
	  </pluginManagement>
  </build>
  
	<reporting>
  	<!-- create JavaDoc (see https://maven.apache.org/plugins/maven-javadoc-plugin/usage.html) -->
	<plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-javadoc-plugin</artifactId>
			<version>2.10.3</version>
		</plugin>
		<plugin>
           <groupId>org.apache.maven.plugins</groupId>
           <artifactId>maven-project-info-reports-plugin</artifactId>
           <version>2.8</version>
   		</plugin>
	</plugins>
  </reporting>
  
</project>